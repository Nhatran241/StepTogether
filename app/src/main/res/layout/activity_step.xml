<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepActivity">
    <androidx.viewpager.widget.ViewPager
        android:layout_above="@id/tl_step_activity"
        android:id="@+id/vp_step_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
    <com.google.android.material.tabs.TabLayout
        android:background="#31C411"
        android:layout_alignParentBottom="true"
        app:tabIndicatorColor="#3F51B5"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#3F51B5"
        app:tabTextColor="#0AA2B6"
        app:tabIndicatorHeight="2dp"
        android:id="@+id/tl_step_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.google.android.material.tabs.TabLayout>
</RelativeLayout>